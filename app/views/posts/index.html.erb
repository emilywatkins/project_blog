<div class="container">
  <h2>view all posts here</h2>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.title, post_path(post) %> |
        <%= link_to "edit", edit_post_path(post) %>
      </li>
    <% end %>
  </ul>
  <% if current_user.try(:is_admin?) %>
    <%= link_to "add a new post", new_post_path %>
  <% end %>
</div>
